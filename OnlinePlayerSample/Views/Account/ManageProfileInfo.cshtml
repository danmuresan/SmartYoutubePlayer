@model OnlinePlayerSample.Models.ProfileInfoModel

@{
    ViewBag.Title = "Manage Profile";
}

<h2>Manage Profile</h2>

@using (Html.BeginForm("ManageProfileInfo", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProfilePicture)
        </div>
        <div class="editor-field">
            <span class="btn btn-warning btn-file">
                Upload Avatar Image
                <input type="file" name="ProfilePicture" />
            </span>
            @Html.ValidationMessageFor(model => model.ProfilePicture)
        </div>

        <p>
            <input class="btn btn-primary" type="submit" value="Save" />
        </p>
    </fieldset>
}

<div class="btn_group_container">

    <div class="btn-group inline pull-left">
        <a href="@Url.Action("Manage", "Account")">
            <div class="btn btn-primary">
                Change password
            </div>
        </a>
        <a href="@Url.Action("Index", "Home")">
            <div class="btn btn-default">
                Back to List
            </div>
        </a>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
